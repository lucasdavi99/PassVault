<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:PassVault.ViewModels"
             xmlns:converters="clr-namespace:PassVault.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:PassVault.Models"
             x:Class="PassVault.Views.MainPage"
             x:DataType="viewModels:MainPageViewModel"
             Shell.NavBarIsVisible="False"
             Title="MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TabVisibilityConverter x:Key="TabVisibilityConverter" />
            <converters:HexToColorConverter x:Key="HexToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Cabeçalho -->
        <Grid Grid.Row="0" BackgroundColor="#19171C" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Botão Itens -->
            <Label Grid.Column="0"
                   Margin="0,30,0,0"
                   HorizontalTextAlignment="Center"
                   Text="Itens"
                   BackgroundColor="Transparent"
                   TextColor="{Binding SelectedTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Itens, TargetNullValue=White, FallbackValue=White}"
                   FontAttributes="Bold"
                   FontSize="24">

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SelectTabCommand}" CommandParameter="Itens"/>
                </Label.GestureRecognizers>

            </Label>

            <!-- Botão Pastas -->
            <Label Grid.Column="1"
                   Margin="0,30,0,0"
                   HorizontalTextAlignment="Center"
                   Text="Pastas"
                   BackgroundColor="Transparent"
                   TextColor="{Binding SelectedTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Pastas, TargetNullValue=White, FallbackValue=White}"
                   FontAttributes="Bold"
                   FontSize="24">

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SelectTabCommand}" CommandParameter="Pastas"/>
                </Label.GestureRecognizers>

            </Label>

            <!-- Traço para o tab "Itens" -->
            <BoxView Grid.Column="0"
                     WidthRequest="130"
                     HeightRequest="3"
                     BackgroundColor="{StaticResource Primary}"
                     HorizontalOptions="Center"
                     VerticalOptions="End"
                     IsVisible="{Binding SelectedTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Itens}"/>

            <!-- Traço para o tab "Pastas" -->
            <BoxView Grid.Column="1"
                     WidthRequest="130"
                     HeightRequest="3"
                     BackgroundColor="{StaticResource Primary}"
                     HorizontalOptions="Center"
                     VerticalOptions="End"
                     IsVisible="{Binding SelectedTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Pastas}"/>
        </Grid>

        <!-- Conteúdo com CarouselView -->
        <CarouselView Grid.Row="1" 
                       x:Name="TabsCarousel"
                       CurrentItemChanged="OnCarouselItemChanged"
                       Position="{Binding TabPosition, Mode=TwoWay}">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Itens</x:String>
                    <x:String>Pastas</x:String>
                </x:Array>
            </CarouselView.ItemsSource>
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <ScrollView Padding="0,0,0,20">
                        <Grid>
                            <!-- Tab Itens -->
                            <StackLayout IsVisible="{Binding ., Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Itens}">
                                <CollectionView ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=Accounts}" Margin="0,30,0,0">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Account">
                                            <SwipeView>
                                                <SwipeView.RightItems>
                                                    <SwipeItems>
                                                        <SwipeItem
                                                            Text="Excluir"
                                                            BackgroundColor="LightCoral"
                                                            Command="{Binding x:DataType='viewModels:MainPageViewModel',Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=DeleteAccountCommand}"
                                                            CommandParameter="{Binding .}" />
                                                    </SwipeItems>
                                                </SwipeView.RightItems>

                                                <Border BackgroundColor="Black"
                                                        MinimumWidthRequest="300"
                                                        MaximumWidthRequest="350"
                                                        HeightRequest="52"
                                                        Stroke="{Binding Color, Converter={StaticResource HexToColorConverter}}">

                                                    <Border.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=EditAccountCommand}"
                                                                              CommandParameter="{Binding .}" />
                                                    </Border.GestureRecognizers>

                                                    <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10" Padding="15,0,15,0">

                                                        <Ellipse WidthRequest="32"
                                                                 HeightRequest="32"
                                                                 Fill="{Binding Color, Converter={StaticResource HexToColorConverter}}"
                                                                 Grid.Column="0"/>

                                                        <Label Text="{Binding Title}"
                                                               TextColor="White"
                                                               Grid.Column="1"
                                                               VerticalTextAlignment="Center"
                                                               FontSize="20"
                                                               FontAttributes="Bold"/>

                                                        <Label Text="{Binding Created, StringFormat='{0:dd/MM/yyyy}'}"
                                                               TextColor="White"
                                                               Grid.Column="2"
                                                               HorizontalTextAlignment="End"
                                                               VerticalTextAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </SwipeView>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>

                            <!-- Tab Pastas -->
                            <StackLayout IsVisible="{Binding ., Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Pastas}">
                                <CollectionView ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=Folders}" Margin="0,30,0,0">

                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                                    </CollectionView.ItemsLayout>

                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Folder">
                                            <SwipeView>
                                                <SwipeView.RightItems>
                                                    <SwipeItems>
                                                        <SwipeItem
                                                            Text="Excluir"
                                                            BackgroundColor="LightCoral"
                                                            Command="{Binding x:DataType='viewModels:MainPageViewModel',Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=DeleteFolderCommand}"
                                                            CommandParameter="{Binding .}" />
                                                    </SwipeItems>
                                                </SwipeView.RightItems>

                                                <Border BackgroundColor="Black"
                                                        MinimumWidthRequest="300"
                                                        MaximumWidthRequest="350"
                                                        HeightRequest="52"
                                                        Stroke="{Binding Color, Converter={StaticResource HexToColorConverter}}">

                                                    <Border.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding x:DataType='viewModels:MainPageViewModel', Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=OpenFolderCommand}"
                                                                              CommandParameter="{Binding .}" />
                                                    </Border.GestureRecognizers>

                                                    <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10" Padding="15,0,15,0">

                                                        <Label FontSize="32"
                                                               VerticalOptions="Center"
                                                               FontFamily="MaterialIcons"
                                                               Text="folder"
                                                               TextColor="{Binding Color, Converter={StaticResource HexToColorConverter}}"
                                                               Grid.Column="0"/>

                                                        <Label Text="{Binding Title}"
                                                               TextColor="White"
                                                               Grid.Column="1"
                                                               VerticalTextAlignment="Center"
                                                               FontSize="20"
                                                               FontAttributes="Bold"/>
                                                    </Grid>
                                                </Border>
                                            </SwipeView>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </Grid>
                    </ScrollView>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Botão de ajuda -->
        <Label Grid.Row="2"               
               HorizontalOptions="End"
               Text="?"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               FontSize="20" 
               Padding="30">

            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding HelpCommand}"/>
            </Label.GestureRecognizers>
        </Label>
        <!-- Menu de navegação fixo -->
        <Border Grid.Row="2"
                BackgroundColor="#19171C"
                WidthRequest="250"
                HeightRequest="92"
                Stroke="Transparent"
                VerticalOptions="End"
                Margin="0,0,0,10"
                StrokeShape="RoundRectangle 100, 100">

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="0">

                <!-- Botão Export/Import -->
                <Button WidthRequest="60"
                        Grid.Column="0"
                        HeightRequest="60"  
                        Padding="0"
                        BackgroundColor="{StaticResource Primary}"
                        CornerRadius="50"
                        Text="download"
                        TextColor="Black"
                        FontFamily="MaterialIcons"
                        FontSize="30"
                        Command="{Binding SelectActionCommand}"
                        CommandParameter="Export/Import"
                        ToolTipProperties.Text="Clique para Importar/Exportar contas." />

                <!-- Botão Adicionar -->
                <Button WidthRequest="60"
                        Grid.Column="1"
                        HeightRequest="60"
                        CornerRadius="10"
                        BackgroundColor="{StaticResource Primary}"
                        Text="+"
                        TextColor="Black"
                        FontSize="{OnPlatform Default=60, Android=40}"
                        Padding="0"
                        HorizontalOptions="Center"
                        Command="{Binding SelectActionCommand}"
                        CommandParameter="Add"
                        ToolTipProperties.Text="Clique para criar novas contas." />

                <!-- Botão Procurar -->
                <Button WidthRequest="60"
                        Grid.Column="2"
                        HeightRequest="60"  
                        Padding="0"
                        BackgroundColor="{StaticResource Primary}"
                        CornerRadius="50"
                        Text="search"
                        TextColor="Black"
                        FontFamily="MaterialIcons"
                        FontSize="30"
                        Command="{Binding SelectActionCommand}"
                        CommandParameter="Search"
                        ToolTipProperties.Text="Clique para buscar  contas."/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>