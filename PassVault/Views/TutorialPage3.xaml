<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:PassVault.ViewModels"
             x:Class="PassVault.Views.TutorialPage3"
             x:DataType="viewModels:TutorialPage3ViewModel"
             Shell.NavBarIsVisible="False"
             Title="TutorialPage3">

    <ContentPage.BindingContext>
        <viewModels:TutorialPage3ViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label  Text="{Binding Title}"
                TextColor="{StaticResource Primary}"
                FontSize="64"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center" 
                Grid.Row="0" />

        <Label Text="{Binding Description}"
               TextColor="White"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               Padding="20" 
               Grid.Row="1" />

        <ImageButton Source="permission_button.png"
                     WidthRequest="184"
                     HeightRequest="59" 
                     Grid.Row="2" 
                     BackgroundColor="Transparent" 
                     Command="{Binding NextPageCommand}"/>
    </Grid>
</ContentPage>