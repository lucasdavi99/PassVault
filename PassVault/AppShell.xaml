<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PassVault.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PassVault.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PassVault">

    <ShellContent Title="Tutorial" ContentTemplate="{DataTemplate local:TutorialPage1}" Route="TutorialPage1" />
    <ShellContent Title="Lock Screen" ContentTemplate="{DataTemplate local:LockScreen}" Route="LockScreen" />
    <ShellContent Title="Main Page" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />

</Shell>